<div class="product_details mt-100 mb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product-details-tab">
                    <div id="img-1" class="zoomWrapper single-zoom" style="border:none">
                        <a href="#">
                            <img id="zoom1" src="~/EshopView/assets/img/product/@Model.Image"
                                 data-zoom-image="~/EshopView/assets/img/product/@Model.Image" alt="big-1">
                        </a>
                    </div>
                   
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product_d_right">
                    

                        <h1>@Model.Name</h1>
                       
                        <div class=" product_ratting">
                            <ul>
                                <li class="review">Tác giả: @Model.Actor</li>
                            </ul>

                        </div>
                        <div class="price_box">
                            <span class="current_price">Giá: @Model.Price</span>

                        </div>
                        <div class="product_desc">
                            <p>
                                @Model.Decription
                            </p>
                        </div>
                        <div class="product_meta">
                            <span>Loại sách: <a asp-controller="ProductTypes" asp-action="Details" asp-route-id="@Model.ProductTypeId">@Model.ProductType.Name</a></span>
                        </div>
                        <form asp-action="AddToCart" asp-controller="Carts" asp-route-id="@Model.Id">
                            <div class="product_variant quantity">
                                <label>Số lượng</label>
                                <input name="quantity" min="1" max="100" value="1" type="number">
                                <button class="button" type="submit">thêm vào giỏ hàng</button>
                            </div>
                        </form>                   
                </div>
            </div>
        </div>
    </div>
</div> 